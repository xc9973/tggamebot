# Telegram Game Bot Environment Configuration
# Copy this file to .env and fill in your values

# Required: Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Database password (default: gamebot_secret)
DB_PASSWORD=gamebot_secret

# Admin Telegram user IDs (comma-separated)
# Example: ADMIN_IDS=123456789,987654321
ADMIN_IDS=

# Whitelist chat IDs (comma-separated, empty = all chats allowed)
# Example: WHITELIST_CHATS=-1001234567890,-1009876543210
WHITELIST_CHATS=

# Timezone (default: Asia/Shanghai)
TZ=Asia/Shanghai
